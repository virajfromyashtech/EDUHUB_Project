@model MVC_EduHub_Project.Models.Course
 
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutEducatorIndex.cshtml";
}
 
<div class="container mt-4">
    <h1 class="mb-3">Edit Course</h1>
 
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Editcourse">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="title" class="control-label"></label>
                    <input asp-for="title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="description" class="control-label"></label>
                    <textarea asp-for="description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="courseStartDate" class="control-label"></label>
                    <input asp-for="courseStartDate" class="form-control" type="date" />
                </div>
                <div class="form-group">
                    <label asp-for="CourseEndDate" class="control-label"></label>
                    <input asp-for="CourseEndDate" class="form-control" type="date" />
                </div>
                <div class="form-group">
                    <label asp-for="category" class="control-label"></label>
                    <input asp-for="category" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="level" class="control-label">Select Level</label>
                    <select asp-for="level" class="form-control" asp-items="@ViewBag.level">
                        <option value="">Choose Level</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="GetCourseByUserId" asp-controller="Educator" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
 