@model IEnumerable<MVC_EduHub_Project.Models.Course>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_LayoutEducatorIndex.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-3 text-center text-uppercase font-weight-bold">List of My Courses</h1>

    <p>
        <a asp-action="Createcourse" class="btn btn-primary">Add New Course</a>
    </p>

    @foreach (var item in Model)
    {
        <div class="card mb-3">
            <h5 class="card-header">@item.title</h5>
            <div class="card-body">
                <p class="card-text">@item.description</p>
                <p class="card-text">Start Date: @item.courseStartDate</p>
                <p class="card-text">End Date: @item.CourseEndDate</p>
                <p class="card-text">Category: @item.category</p>
                <p class="card-text">Level: @item.level</p>
                <p class="card-text">User   ID: @item.userId</p>
            </div>
            <div class="card-footer">
                @Html.ActionLink("Edit", "Editcourse", new { id=item.userId}, new {@class="btn btn-sm btn-primary btn-rounded"})
                @Html.ActionLink("Materials", "Index1", "Material", new { id=item.courseId}, new {@class="btn btn-sm btn-info btn-rounded"})
                @Html.ActionLink("Enquiries", "GetEnquiries", "Enquiry", new { id=item.courseId}, new {@class="btn btn-sm btn-warning btn-rounded"})
                <a asp-controller="Feedback" asp-action="MyFeedback" asp-route-id="@item.courseId" class="btn btn-sm btn-secondary btn-rounded">Show Feedback</a>
            </div>
        </div>
        <div class="mt-3">
    <a asp-action="Index" asp-controller="Educator" class="btn btn-secondary">Back to List</a>
</div>
    }
</div>


<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        border-radius: 10px;
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.4);
    }

    .card-footer {
        background-color: #f9f9f9;
        padding: 10px;
        text-align: center;
    }

    .btn-rounded {
        border-radius: 10px;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>