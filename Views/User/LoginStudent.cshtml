@model MVC_EduHub_Project.Models.LoginViewModel;

<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://static.vecteezy.com/system/resources/thumbnails/011/432/528/small_2x/enter-login-and-password-registration-page-on-screen-sign-in-to-your-account-creative-metaphor-login-page-mobile-app-with-user-page-flat-illustration-vector.jpg" class="img-fluid rounded-circle" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h3 class="text-uppercase fw-bold mb-4">Login as Student</h3>
        <form asp-action="Login">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input asp-for="UserName" id="form1Example13" class="form-control " />
            <label asp-for="UserName" class="form-label" for="form1Example13"></label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input asp-for="Password" type="password" id="form1Example23" class="form-control " />
            <label asp-for="Password" class="form-label" for="form1Example23"></label>
          </div>

          <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
              <label class="form-check-label" for="form1Example3">Remember me</label>
            </div>
            <a href="#!" class="text-body">Forgot password?</a>
          </div>

          <!-- Submit button -->
          <button type="submit" value="Login" class="btn btn-primary btn-lg btn-block">Sign in</button>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>

          <a class="btn btn-facebook btn-lg btn-block" href="#!" role="button">
            <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
          </a>
          <a class="btn btn-twitter btn-lg btn-block" href="#!" role="button">
            <i class="fab fa-twitter me-2"></i>Continue with Twitter
          </a>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .gradient-custom {
    background: radial-gradient(rgb(106, 17, 203), rgb(37, 117, 252));
    background-size: 400px 400px;
    background-position: 0% 100%;
    height: 100vh;
    margin: 0;
    padding: 0;
  }

  .form-outline {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .form-outline label {
    position: absolute;
    top: 0;
    left: 0;
    padding: 1rem;
    font-size: 1rem;
    font-weight: 400;
    color: #495057;
    cursor: text;
    transition: all 0.2s ease-in-out;
  }

  .form-outline input[type="text"],
  .form-outline input[type="password"] {
    padding: 1rem;
    font-size: 1rem;
    font-weight: 400;
    color: #495057;
    background-color: #fff;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    transition: all 0.2s ease-in-out;
  }

  .form-outline input[type="text"]:focus,
  .form-outline input[type="password"]:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
  }

  .btn-facebook {
    background-color: #3b5998;
    color: #fff;
  }

  .btn-twitter {
    background-color: #55acee;
    color: #fff;
  }
</style>


