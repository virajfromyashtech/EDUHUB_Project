@model IEnumerable<MVC_EduHub_Project.ViewModels.CourseMaterialViewModel>
 
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_LayoutEducatorIndex.cshtml";
}
 
<h1>My Materials</h1>
 
<p>
    <a asp-controller="Material" asp-action="Create" asp-route-id="@TempData["CourseId"]">Add Material</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaterialId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course_Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material_Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course_Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material_Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContentType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id=item.MaterialId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.MaterialId })
            </td>
        </tr>
}
    </tbody>
</table>
 
 